<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_dimen</item>
    </style>

    <style name="ErrorText" parent="Widget.AppCompat.TextView">
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_dimen</item>
        <item name="android:text">@string/error</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ErrorButton" parent="Widget.AppCompat.Button">
        <item name="android:visibility">gone</item>
        <item name="android:background">@color/orange</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_dimen</item>
        <item name="android:text">@string/retry</item>
    </style>
</resources>